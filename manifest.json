{
  "manifest_version": 3,
  "name": "Kozmos: New Tab",
  "version": "1.2",
  "version_name": "1.2",
  "description": "Yeni sekmede özel bir HTML sayfası, ayarlanabilir arkaplan ve favicon'lu linkler gösterir.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.google.com/s2/favicons/*",
    "https://t3.gstatic.com/faviconV2/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "index.html"],
      "matches": [
        "https://www.google.com/*",
        "https://t3.gstatic.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "48": "48x48.png",
      "128": "128x128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },
  "icons": {
    "48": "48x48.png",
    "128": "128x128.png"
  }
}